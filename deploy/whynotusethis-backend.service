[Unit]
Description=WhyNotUseThis Website Backend
After=network.target

[Service]
Type=simple
User=www-data
WorkingDirectory=/var/www/whynotusethis.website/backend
ExecStart=/usr/bin/node server.js
Restart=on-failure
RestartSec=10
StandardOutput=syslog
StandardError=syslog
SyslogIdentifier=whynotusethis-backend
Environment=NODE_ENV=production
Environment=PORT=3001

[Install]
WantedBy=multi-user.target
